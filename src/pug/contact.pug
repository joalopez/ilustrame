doctype html
html(lang='en')

    head

        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content)
        meta(name='author', content)

        title Modern Business - Start Bootstrap Template

        // Favicon
        link(rel='icon', type='image/x-icon', href='assets/favicon.ico')

        include includes/css.pug

    body.d-flex.flex-column

        main.flex-shrink-0

            // Navigation
            include includes/navbar.pug

            // Page content
            section.py-5

                .container.px-5

                    // Contact form
                    .bg-light.rounded-3.py-5.px-4.px-md-5.mb-5
                        .text-center.mb-5
                            .feature.bg-primary.bg-gradient.text-white.rounded-3.mb-3
                                i.bi.bi-envelope
                            h1.fw-bolder Get in touch
                            p.lead.fw-normal.text-muted.mb-0 We'd love to hear from you
                        .row.gx-5.justify-content-center
                            .col-lg-8.col-xl-6
                                form
                                    .form-floating.mb-3
                                        input#inputName.form-control(type='text', placeholder='Enter your name...')
                                        label(for='inputName') Full name
                                    .form-floating.mb-3
                                        input#inputEmail.form-control(type='email', placeholder='name@example.com')
                                        label(for='inputEmail') Email address
                                    .form-floating.mb-3
                                        input#inputPhone.form-control(type='tel', placeholder='(123) 456-7890')
                                        label(for='inputPhone') Phone number
                                    .form-floating.mb-3
                                        textarea#inputMessage.form-control(type='text', placeholder='Enter your message here...', style='height: 10rem;')
                                        label(for='inputMessage') Message

                    // Contact cards
                    .row.gx-5.row-cols-2.row-cols-lg-4.py-5
                        .col
                            .feature.bg-primary.bg-gradient.text-white.rounded-3.mb-3
                                i.bi.bi-chat-dots
                            .h5.mb-2 Chat with us
                            p.text-muted.mb-0 Chat live with one of our support specialists.
                        .col
                            .feature.bg-primary.bg-gradient.text-white.rounded-3.mb-3
                                i.bi.bi-people
                            .h5 Ask the community
                            p.text-muted.mb-0 Explore our community forums and communicate with other users.
                        .col
                            .feature.bg-primary.bg-gradient.text-white.rounded-3.mb-3
                                i.bi.bi-question-circle
                            .h5 Support center
                            p.text-muted.mb-0 Browse FAQ's and support articles to find solutions.
                        .col
                            .feature.bg-primary.bg-gradient.text-white.rounded-3.mb-3
                                i.bi.bi-telephone
                            .h5 Call us
                            p.text-muted.mb-0 Call us during normal business hours at (555) 892-9403.

        // Footer
        include includes/footer.pug

        include includes/scripts.pug
